@{
    ViewData["Title"] = "Create";
}
<div class="text-center">
    <h2 class="display-4">Создание работ</h2>
</div>
<form method="post">
    <div class="row">
        <div class="col-4">Вид работы:</div>
        <div class="col-8"><input type="text" name="workname" id="workname" /></div>
    </div>
    <div class="row">
        <div class="col-4">Цена:</div>
        <div class="col-8">
            <input type="text" id="price" name="price" />
        </div>
    </div>
    <div class="row">
        <div class="col-8"></div>
        <div class="col-4"><input type="submit" value="Создать" class="btn-btnprimary" /></div>
    </div>
</form>