@using CTOBusinessLogic.ViewModels
@model List<WorkViewModel>
@{
    ViewData["Title"] = "Work";
}
<div class="text-center">
    <h1 class="display-4">Виды ремонтных работ</h1>
</div>
<div class="text-center">
    @{
        if (Model == null)
        {
            <h3 class="display-4">Авторизируйтесь</h3>
            return;
        }
        <p>
            <a asp-action="CreateWork">Создать ремонтную работу</a>
        </p>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Название работы
                    </th>
                    <th>
                        Цена
                    </th>
                    <th>
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem =>
                            item.WorkName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem =>
                            item.WorkPrice)
                        </td>
                        <td>
                            <a asp-action="UpdateWork" asp-route-id="@item.Id">Изменить</a> 
                            <a asp-action="DeleteWork" asp-route-id="@item.Id">Удалить</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>