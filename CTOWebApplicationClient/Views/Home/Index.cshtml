@using CTOBusinessLogic.ViewModels
@model List<RequestViewModel>
@{
    ViewData["Title"] = "Home Page";
}
<div class="text-center">
    <h1 class="display-4">Заявки</h1>
</div>
<div class="text-center">
    @{
        if (Model == null)
        {
            <h3 class="display-4">Авторизируйтесь</h3>
            return;
        }
        <p>
            <a asp-action="CreateConference">Сделать заявку</a>
        </p>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Заявка
                    </th>
                    <th>
                        Стоимость
                    </th>
                    <th>
                        Дата начала
                    </th>
                    <th>
                        Дата окончания
                    </th>
                    <th>
                        Cумма к оплате
                    </th>
                    <th>
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.RequestName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.RequestCost)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DateFrom)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DateTo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.RequestCost)
                        </td>

                        <td>
                            <a asp-action="UpdateRequest" asp-route-id="@item.Id" asp-route-datefrom="@item.DateFrom" asp-route-dateto="@item.DateTo" asp-route-requestname="@item.RequestName">Изменить</a> |
                            <a asp-action="DeleteRequest" asp-route-id="@item.Id">Удалить</a>
                            <a asp-action="Payment" asp-route-id="@item.Id" asp-route-requestname="@item.RequestName" asp-route-requestcost="@item.RequestCost" asp-route-requestumtopayment="@item.RequestSumToPayment">Оплатить</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
